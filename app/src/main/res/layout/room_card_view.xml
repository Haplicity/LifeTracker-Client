<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/room_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4sp"
        card_view:cardElevation="10sp"
        card_view:cardUseCompatPadding="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Placeholder"
                android:textSize="20sp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"/>

            <TextView
                android:id="@+id/room_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/4"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"/>

            <TextView
                android:id="@+id/creator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creator: Jimmy Jones"
                android:textSize="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_below="@id/room_name" />

            <TextView
                android:id="@+id/room_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a short description about this particular room."
                android:textSize="15sp"
                android:layout_below="@id/creator_name"
                android:layout_marginTop="10sp"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>