                android:text="+5"
                android:textSize="15sp"
                android:background="@android:color/holo_blue_light"
                android:visibility="gone"
                android:id="@+id/player3PlusFive_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="15sp"
                android:background="@android:color/holo_blue_light"
                android:visibility="gone"
                android:id="@+id/player3MinusOne_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:textSize="15sp"
                android:background="@android:color/holo_blue_light"
                android:visibility="gone"
                android:id="@+id/player3MinusFive_button" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.0"
        android:gravity="center"
        android:background="@android:color/holo_red_light">

        <TextView
            android:id="@+id/player4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Player 4"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/player4_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="60sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textSize="15sp"
                android:background="@android:color/holo_red_light"
                android:visibility="gone"
                android:id="@+id/player4PlusOne_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5"
                android:textSize="15sp"
                android:background="@android:color/holo_red_light"
                android:visibility="gone"
                android:id="@+id/player4PlusFive_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textSize="15sp"
                android:background="@android:color/holo_red_light"
                android:visibility="gone"
                android:id="@+id/player4MinusOne_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-5"
                android:textSize="15sp"
                android:background="@android:color/holo_red_light"
                android:visibility="gone"
                android:id="@+id/player4MinusFive_button" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</LinearLayout>
